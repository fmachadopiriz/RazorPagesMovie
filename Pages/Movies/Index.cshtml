@page "{id:int?}"
@model RazorPagesMovie.Pages.Movies.IndexModel
@using RazorPagesMovie.Models;

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Price</th>
             <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie.Movies)
        {
            string selectedRow = "";
            if (item.ID == Model.MovieID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Movie.Actors != null)
{
    <h3>Cast in Selected Movie</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Birth Data</th>
            <th>Awards</th>
        </tr>

        @foreach (var item in Model.Movie.Actors)
        {
            string selectedRow = "";
            if (item.ID == Model.ActorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.ActionLink("Select", "OnGetAsync",
                                  new { actorID = item.ID })
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.BirthDate
                </td>
                <td>
                    @item.AwardedBestActor
                </td>
            </tr>
        }
    </table>
}